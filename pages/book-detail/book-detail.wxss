/* pages/book-detail/book-detail.wxss */
.container{
  width: 100%;
  background: #f5f5f5;
}
.header{
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0
}
.header image{
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3
}
.title{
  margin-top: 20rpx;
  color: #2f2f2f;
  font-size: 38rpx;
  font-weight: 600
}
.author{
  font-size: 28rpx;
  color:#999;
  margin-top: 10rpx
}
.sub-container{
  margin-top: 30rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
}
.headline{
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx
}
.tags{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.content{
  text-indent: 75rpx;
  font-weight: 500
}
.detail-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 80rpx;
}
.vertical{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 15rpx;
}
.description{
  font-size: 30rpx;
  color: #999;
}
.des-content text{
  margin-bottom: 2rpx;
}
.post-container{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-fake{
  margin: 0 20rpx;
  width: 480rpx;
  height: 70rpx;
  border: 1px solid black;
  border-radius: 35rpx;
  display: flex;
  align-items: center
}
.post-fake text{
  font-size: 24rpx;
  color: #666;
  padding-left: 20rpx
}
.posting-contanier{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 999
}
.posting-header{
  width: 690rpx;
  height: 100rpx;
  font-size: 28rpx;
  color:#bbb;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5
}
.cancel{
  color:#666
}
.post{
  margin: 30rpx auto;
  font-size: 28rpx;
  width: 690rpx;
  height: 56rpx;
  border-radius: 15rpx;
  padding-left: 25rpx;
  background: #f5f5f5;
}