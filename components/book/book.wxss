/* components/book/book.wxss */
.container{
  width: 240rpx;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 2px 2px 2px #e3e3e3;
  margin-top: 30rpx;
  position: relative
}
.img{
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
.description{
  width: 216rpx;
  height: 110rpx;
  padding: 5rpx 10rpx 8rpx 15rpx; 
  position: absolute;
  bottom: 0;
  background: white;
  display: flex;
  flex-direction: column;
}
.title{
  margin-top: 10rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-size: 24rpx;
  overflow: hidden;
}
.author{
  font-size: 20rpx;
  color:#999999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  margin-bottom: 10rpx
}
.foot{
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color:#666666
}